<h1 class="page-header">Cadastrar Comodidade</h1>

<a href="<%= Routes.admin_amenity_path(@conn, :index) %>" class="btn btn-default mb-20">
  Voltar
</a>

<%= form_for @changeset, Routes.admin_amenity_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= label f, :name, "Nome" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <%= submit "Cadastrar", class: "btn btn-primary" %>
<% end %>
